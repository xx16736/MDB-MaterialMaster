<mvc:View xmlns:core="sap.ui.core" controllerName="com.newell.fiori.HelloWorld.controller.MaterialDetails" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f" xmlns:cards="sap.f.cards" xmlns:l="sap.ui.layout" displayBlock="true" xmlns="sap.m">
	<Page title="details">
		<customHeader>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="Go Back" type="Transparent" press="goBack"/>
			</OverflowToolbar>
		</customHeader>
		<content>
			<Carousel id="idCarousel" height="auto" pages="{ path: 'materials>/' }" pageChanged="pageChanged">
				<customLayout>
					<CarouselLayout visiblePagesCount="1"/>
				</customLayout>
				<f:Card>
					<f:header>
						<cards:Header title="{materials>MatId}" subtitle="{materials>MatDesc}" iconSrc="{config>/ImageURL}" iconDisplayShape="Square"/>
					</f:header>
					<f:content>
						<l:VerticalLayout class="sapUiContentPadding" width="100%">
							<l:BlockLayout>
								<l:BlockLayoutRow>
									<l:BlockLayoutCell  width="1">
										<HBox class="sapUiTinyMarginBottom">
											<Label text="Mat Type"/>
											<Text text="{materials>MatType}" class="sapUiTinyMarginBegin"/>
										</HBox>
										<!--<HBox class="sapUiSmallMarginBottom">-->
										<!--	<Text text="{materials>MatType}"/>-->
										<!--</HBox>-->
										<HBox class="sapUiTinyMarginBottom">
											<Label text="Available"/>
											<Text text="{materials>Available}" class="sapUiTinyMarginBegin"/>
										</HBox>
										<!--<HBox class="sapUiSmallMarginBottom">-->
										<!--	<Text text="{materials>Available}"/>-->
										<!--</HBox>-->
										<HBox class="sapUiTinyMarginBottom">
											<Label text="Date Available"/>
											<Text text="{materials>DateAvailable}" class="sapUiTinyMarginBegin"/>
										</HBox>
										<!--<HBox class="sapUiTinyMarginBottom">-->
										<!--	<Label text="{materials>DateAvailable}:"/>-->
										<!--</HBox>-->
										<HBox class="sapUiTinyMarginBottom">
											<Label text="Back Order Date"/>
											<Text text="{materials>BackOrderdate}" class="sapUiTinyMarginBegin"/>
										</HBox>
										<!--<HBox class="sapUiSmallMarginBottom">-->
										<!--	<Text text="{materials>BackOrderdate}"/>-->
										<!--</HBox>-->
									</l:BlockLayoutCell>
									<l:BlockLayoutCell title="Inquiries" width="1">
										<Table inset="false" items="{path: 'materials>inquiries'}">
											<columns>
												<!--<Column width="5em">-->
												<!--	<Text text="Sr No"/>-->
												<!--</Column>-->
												<!--<Column minScreenWidth="Tablet" demandPopin="true">-->
												<!--	<Text text="Inquiry"/>-->
												<!--</Column>-->
												<Column>
													<Text text="Text"/>
												</Column>
											</columns>
											<items>
												<ColumnListItem >
													<cells>
														<!--<Text text="{materials>QuesId}"/>-->
														<Text text="{materials>QuesText}"/>
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</l:BlockLayoutCell>
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</l:VerticalLayout>
					</f:content>
				</f:Card>
			</Carousel>
		</content>
		<footer>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="Ask Ques" type="Transparent" press="onAskQues"/>
				<Button text="Update" type="Transparent" press="onUpdateMatInfo"/>
				<Button text="Delete" type="Transparent" press="onDeleteMat"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>